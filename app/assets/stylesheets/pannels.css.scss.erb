.panel .spinner {
  margin: 0 20px;
  width: 32px;
  height: 32px;
  background: url(<%= asset_path 'ajax-loader.gif' %>) no-repeat;
}

.panel .header {
  overflow: hidden;
}

.panel .periods {
  float: left;
}

.panel .check-live, .panel .spinner {
  float: right;
  margin: 0 10px;
  height: 32px;
  line-height: 32px;
}

.panel .check-live {
  width: 50px;
}

.panel .check-live input, .panel .check-live label {
  float: left;
}

.panel .body {
  height: 400px;
  overflow: scroll;
}

.panel .stats {
  width: auto;
  float: left;
  margin: 0 10px 0 0;
}

.panel table caption {
  font-size: 24px;
  font-weight: bold;
}
