.new-panel-btn {
  margin: 10px 0;
}

.panels-tabs a {
  font-size: 18px;
}

.panel .spinner {
  margin: 0 20px;
  width: 32px;
  height: 32px;
  background: url(<%= asset_path 'ajax-loader.gif' %>) no-repeat;
}

.panel .header {
  overflow: hidden;
}

.panel .info span {
  line-height: 32px;
  margin: 0 10px;
  padding: 0 10px;
  font-size: 14px;
}

.panel .periods {
  float: left;
}

.panel .check-live, .panel .spinner, .panel .commands {
  float: right;
  margin: 0 10px;
  height: 32px;
  line-height: 32px;
}

.panel .check-live {
  width: 50px;
}

.panel .check-live input, .panel .check-live label {
  float: left;
}

.panel .commands a {
  margin: 0 10px;
}

.panel .body {
  height: 400px;
  overflow: scroll;
}

.panel .stats {
  width: auto;
  float: left;
  margin: 0 10px 0 0;
}

.panel .tweets {
  padding-top: 200px;
  width: 350px;
  float: right;
}

.panel table caption {
  font-size: 24px;
  font-weight: bold;
}
.panel .spam-user {
  float: right;
}

#history-stats-chart {
  display: none;
  position: absolute;
  width: 400px;
}
